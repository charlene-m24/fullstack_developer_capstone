{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "extends": [
    "eslint:recommended"
  ],
  "overrides": [
    {
      "files": ["**/*.jsx", "**/*.tsx"],
      "env": {
        "browser": true
      },
      "extends": [
        "plugin:react/recommended"
      ],
      "plugins": ["react"],
      "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
      },
      "settings": {
        "react": {
          "version": "detect"
        }
      }
    }
  ]
}
